
{
    "$schema": "http://json-schema.org/schema#"
    "id": "job_system_form"
    "title": "Person",
    "type": "object",
    "properties": {
        "firstName": {
            "description": "First Name",
            "type": "string,"
        },
        "lastName": {
            "description": "Last Name",
            "type": "string",
        },
        "age": {
            "description": "Age in years",
            "type": "integer",
            "minimum": 0
        },
        "referal": {
            "description": "How did you learn about us",
            "type": "string",
            "enum": ["Through an online search", "Midnight Basketball Website", "Friend", "Library", "Community Group", "Other" ],
            
        }
        "neighborhood": {
            "description": "Which neighborhood are you closest to",
            "type": "string",
            "enum": ["Upper Ninth Ward", "CBD-Downtown", "Mid-City", "Garden District", "None of the above"],
        }
        
        }
        "email": {
            "description": "example@example.com",
            "type": "string",
            "format": "email",
        },
        "phone": {
            "type": "string",
            "pattern": "^[0-9()\\-\\.\\s]+$",
        },
        "apply_to_you" {
        
            "description": "Questions to identify oportunity center",
            "type": "boolean",
            
        }
        }
    },
    "required": ["firstName", "lastName", "age", "referal", "neighborhood"]
}