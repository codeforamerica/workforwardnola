
{
    "$schema": "http://json-schema.org/schema#"
    "title": "Person",
    "type": "object",
    "properties": {
        "firstName": {
            "type": "string"
        },
        "lastName": {
            "type": "string"
        },
        "age": {
            "description": "Age in years",
            "type": "integer",
            "minimum": 0
        },
        "email": {
            "description": "example@example.com",
            "type": "string",
            "format": "email",
        },
        "phone": {
            "type": "string",
            "pattern": "^[0-9()\\-\\.\\s]+$",
        },
        "apply_to_you" {
        
            "description": "Questions to identify oportunity center",
            "type": "boolean"
            
        }
        }
    },
    "required": ["firstName", "lastName", "age"]
}