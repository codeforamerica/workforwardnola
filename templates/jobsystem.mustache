    <script>
    
    var young = document.getElementById("young").checked;
    var veteran = document.getElementById("veteran").checked;
    var no_transportation = document.getElementById("no_transportation").checked;
    var homeless = document.getElementById("homeless").checked;
    var no_drivers_license = document.getElementById("no_drivers_license").checked;
    var no_state_id = document.getElementById("no_state_id").checked;
    var disabled = document.getElementById("disabled").checked;
    var childcare = document.getElementById("childcare").checked;
    var criminal = document.getElementById("criminal").checked;
    var previously_incarcerated = document.getElementById("previously_incarcerated").checked;
    var using_drugs = document.getElementById("using_drugs").checked;
    var none = document.getElementById("none").checked;
    
    
    var x = document.getElementById("attributes");
    var y = x.getElementsByTagName("input");
    
    for (var i = 0, len = y.length; i < len; i++) {
      if ( y[i].type == "checkbox" ) {
        y[i].onclick = function() {
          opportunityCenter();
        }
      }
    }

    function addEmail() {
      document.getElementById("phone_submission_spot").style = "display: none;";
      document.getElementById("text_submission_spot").style = "display: none;";
      document.getElementById("email_submission_spot").style = "display: inline;";
    }
    
    function addPhone() {
      document.getElementById("email_submission_spot").style = "display: none;";
      document.getElementById("text_submission_spot").style = "display: none;";
      document.getElementById("phone_submission_spot").style = "display: inline;";
    }
    
    function addText() {
      document.getElementById("email_submission_spot").style = "display: none;";
      document.getElementById("phone_submission_spot").style = "display: none;";
      document.getElementById("text_submission_spot").style = "display: inline;";
    }
    
    function opportunityCenter() {
      document.getElementById("opportunity_center").innerHTML = "test";
    }
    
    
    </script>
  </div>
